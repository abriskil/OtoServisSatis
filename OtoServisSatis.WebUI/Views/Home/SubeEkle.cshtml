@using SubeApi.Models;
@model Sube
@{
    ViewData["Title"] = "Şube Ekle";
}
<h2>Yeni Şube Ekle</h2>

<form asp-action="SubeEkle" method="post">
    <div class="form-group">
        <label for="ad">Şube Adı:</label>
        <input type="text" name="ad" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="lokason">Şehir:</label>
        <input type="text" name="lokason" class="form-control" required>
    </div>
    <button type="submit">Kaydet</button>
</form>
